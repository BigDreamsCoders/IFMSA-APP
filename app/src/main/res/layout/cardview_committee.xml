<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4dp"
    app:cardCornerRadius="@dimen/_4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view_committee_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150dp"
            android:contentDescription="@string/committee_photo_description"
            android:src="@color/indigo_200" />

        <TextView
            android:id="@+id/text_view_committee_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view_committee_photo"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_committee_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_committee_name"
            android:layout_margin="@dimen/_8dp"
            android:gravity="center"
            android:textSize="@dimen/_16sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
